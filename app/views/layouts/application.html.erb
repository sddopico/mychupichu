<!DOCTYPE html>
<html>
<head>
  <title>Mychupichu</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if user_signed_in? %>
	Hi <%= current_user.name %> | <%= link_to 'logout', destroy_user_session_path, :method => :delete %><br />
	<%= link_to 'Home', root_path %> | <%= link_to 'Add Chu', chus_path %> 	
<% else %>
	<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %> | <%= link_to "Sign in with Linkedin", user_omniauth_authorize_path(:linkedin) %><br />
	<%= link_to 'Home', root_path %> | <%= link_to 'Add Chu', chus_path %>
<% end %>

<p class="notice"><%= notice %></p>

<%= yield %>

</body>
</html>
